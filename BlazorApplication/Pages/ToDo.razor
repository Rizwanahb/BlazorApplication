@page "/todo"
@using BlazorApplication.Model

<PageTitle>ToDo</PageTitle>



<h3>ToDo Items (@todos.Count(todo => !todo.IsDone))</h3>

<ul>
      @foreach (var todo in todos)
      {
        <li>
           <input type="checkbox" @bind="todo.IsDone" />
            <input @bind="todo.Title" />
            <input @bind="todo.Description" />
         </li>

      }
</ul>

<input placeholder="Item Title" @bind = "newtitle"/>
<input placeholder="Item Description" @bind="newdescription" />


<button @onclick="AddTodo">Add todo</button>


@code {
    private List<todo> todos = new();
    private string? newtitle;
    private string? newdescription;

    private void AddTodo()
    {
        // Todo: Add the todo
        if (!string.IsNullOrWhiteSpace(newtitle))
        {
            todos.Add(new todo { Title = newtitle});
         
          
            newtitle = string.Empty;
        }

        if (!string.IsNullOrWhiteSpace(newdescription))
        {
            todos.Add(new todo { Title = newdescription });


            newdescription = string.Empty;
        }
    }
}